{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
    <div class="row">
        {% for personne in personnes %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">{{personne.firstname}}</h5>
              <h6 class="card-subtitle mb-2 text-muted">{{ personne.name }}</h6>
              <p class="card-text">{{ personne.age }}</p>
              <a href="{{ path('personne.detail', {id : personne.id }) }}" class="card-link">Details</a>
              <a href="{{ path('personne.delete', {id : personne.id }) }}" class="card-link">Delete</a>
            </div>
          </div>
        {% endfor %}
    </div>
    {% if isPaginated is defined and isPaginated %}
    <hr>  
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        {% if page != 1 %}
          <li class="page-item"><a class="page-link" href="{{ path('personne.list.alls', {page : page - 1 , nbre : nbre}) }}">Previous</a></li>
        {% endif %}
        {% for i in range(1, nbPage) %}
          <li class="page-item"><a class="page-link" href="{{ path('personne.list.alls', {page : i, nbre : nbre}) }}">{{ i }}</a></li>
        {% endfor %}
    
        {% if page != nbPage %}
          <li class="page-item"><a class="page-link" href="{{ path('personne.list.alls', {page : page + 1 , nbre : nbre}) }}">Next</a></li>
        {% endif %}      </ul>
    </nav>
    {% endif %}

{% endblock %}
